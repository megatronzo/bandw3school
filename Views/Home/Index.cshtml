<script>
    //Lắng nghe thao tác click chọn người dùng

    const buyBtns = document.querySelectorAll('.js-buy-ticket') //Khai báo danh sách nút bấm

    const modal = document.querySelector('.modal')   // khai báo modal

    const modalContainer = document.querySelector('.js-modal-container')

    const modalClose = document.querySelector('.js-modal-close')

    function showBuyTickets() {                 // Tạo hàm thể hiện hành động
        modal.classList.add('open')            // gọi hành động hiển thị modal mua vé
    }

    function hideBuyTickets() {                 // Tạo hàm thể hiện hành động
        modal.classList.remove('open')            // gọi hành động gỡ bỏ class open của modal
    }
    for (const buyBtn of buyBtns) {               // Tạo vòng lặp do có nhiều btn gọi từng thẻ btn trong danh sách nút
        buyBtn.addEventListener('click', showBuyTickets)         // nghe hành vi click chọn sẽ gọi hàm thể hiện hành động
    }
    modalClose.addEventListener('click', hideBuyTickets)         //Không tạo vòng lặp vì có 1, nghe hành vi click chọn sẽ gọi hàm thể hiện hành động
    modal.addEventListener('click', hideBuyTickets)              // click vùng ngoài đóng modal
    modalContainer.addEventListener('click', function (event) {
        event.stopPropagation()
    })


</script>